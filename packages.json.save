{
  "packages": [
    {
      "name": "Qt",
      "dependence": "C/C++",
      "commands": [
        "apt-get install -y libqt5x11extras5",
        "apt-get install -y qt5-dev-tools",
        "apt-get install -y libqt5-dev",
        "apt-get install -y libqt5-core",
        "apt-get install -y libqt5-gui",
        "apt-get install -y qt5-default",
        "apt-get install -y qtcreator",
        "apt-get install -y qtbase5-examples",
        "apt-get install -y qtdeclarative5-examples"
      ]
    },
    {
      "name": "Java",
      "commands": [
        "add-apt-repository \"deb http://ppa.launchpad.net/linuxuprising/java/ubuntu bionic main\"",
        "apt-get update",
        "apt-get install -y oracle-java10-installer"
      ]
    },
    {
      "name": "docker",
      "commands": [
        "apt-get install -y apt-transport-https",
        "apt-get install -y ca-certificates",
        "apt-get install -y gnupg",
        "apt-get install -y docker",
        "apt-get install -y docker-compose"
      ]
    },
    {
      "name": "teamviewer",
      "commands": [
        "wget https://download.teamviewer.com/download/linux/teamviewer_amd64.deb",
        "dpkg -i teamviewer_amd64.deb",
        "rm teamviewer_amd64.deb"
      ]
    },
    {
      "name": "Google Chrome",
      "commands": [
        "wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add -",
        "sh -c \"echo \"deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main\" >> /etc/apt/sources.list.d/google-chrome.list\"",
        "apt-get update",
        "apt-get install -y google-chrome-stable"
      ]
    },
    {
      "name": "Tor Browser",
      "commands": [
	"sudo apt-get install -y dirmngr",
	"sudo apt-get install gnupg2 -y",
	"apt-get install apt-transport-https",
        "echo \"deb https://deb.torproject.org/torproject.org stretch main\" | sudo tee -a /etc/apt/sources.list.d/tor.list",
 	"echo \"deb-src https://deb.torproject.org/torproject.org stretch main\" | sudo tee -a /etc/apt/sources.list.d/tor.list",
	"gpg2 --recv A3C4F0F979CAA22CDBA8F512EE8CBC9E886DDD89",
	"gpg2 --export A3C4F0F979CAA22CDBA8F512EE8CBC9E886DDD89 | apt-key add -",
	"apt-get update",
	"apt-get install tor deb.torproject.org-keyring",
	"cd tmp && wget https://www.torproject.org/dist/torbrowser/8.0/tor-browser-linux64-8.0_en-US.tar.xz && tar -xvJf tor-browser-linux64-8.0_en-US.tar.xz && mv -R tor-browser_en-US /opt/tor-browser"
      ]
    },
    {
      "name": "Sublime Text",
      "commands": [
        "snap install sublime-text --classic"
      ]
    },
    {
      "name": "PyCharm",
      "commands": [
        "snap install pycharm-community --classic"
      ]
    },
    {
      "name": "Intellij IDEA",
      "commands": [
        "snap install intellij-idea-ultimate --classic"
      ]
    },
    {
      "name": "PHPStorm",
      "commands": [
        "snap install phpstorm --classic"
      ]
    },
    {
      "name": "WebStorm",
      "commands": [
        "snap install webstorm --classic"
      ]
    },
    {
      "name": "etcher",
      "commands": [
        "echo \"deb https://dl.bintray.com/resin-io/debian stable etcher\" | sudo tee /etc/apt/sources.list.d/etcher.list",
        "sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 379CE192D401AB61",
        "sudo apt-get update",
        "sudo apt-get install -y etcher-electron"
      ]
    },
    {
      "name": "woeusb",
      "commands": [
        "git clone https://github.com/slacka/WoeUSB.git tmp/woeusb && cd tmp/woeusb && ./setup-development-environment.bash && sudo apt-get install -y devscripts equivs gdebi-core && mk-build-deps && sudo gdebi woeusb-build-deps_*_all.deb && autoreconf --force --install && ./configure && make && sudo make install"
      ]
    },
    {
      "name": "node",
      "commands": [
        "sudo apt-get install -y nodejs",
        "sudo apt-get install -y npm",
        "npm i --global vue-cli"
      ]
    }
  ]
}
